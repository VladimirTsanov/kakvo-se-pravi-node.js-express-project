<!DOCTYPE html>
<html lang="bg">

<%- include('head') %>
    <style>
        html,
        body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }
    </style>

    <body>
        <%- include('header') %>

            <main class="container my-5">

                <section class="mb-4">
                    <h2 class="fw-bold">
                        Всички статии в категория:&nbsp;
                        <% allCategories.forEach((e)=> { if (e.slug === slug) { %>
                            <%= e.name %>
                                <% }}); %>
                    </h2>
                </section>

                <div class="row g-4">
                    <% list_of_TheCategory.forEach(article=> { %>
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body d-flex flex-column">

                                    <h5 class="card-title mb-3">
                                        <a href="/article/<%= article.slug %>"
                                            class="stretched-link text-decoration-none text-dark">
                                            <%= article.title %>
                                        </a>
                                    </h5>

                                    <p class="card-text text-muted mb-0">
                                        <%- article.content.slice(0, 150) %>…
                                    </p>

                                </div>
                            </div>
                        </div>
                        <% }); %>
                </div>

            </main>


            <%- include('footer') %>
    </body>

</html>